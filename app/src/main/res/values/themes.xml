<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Freebite2" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/light_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_blue</item>
        <!-- Customize your theme here. -->


        <item name="android:fontFamily">@font/kanita</item>
    </style>
    <style name="tab_layout">
        <item name="android:textColor">#575757</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.ProfileFreebite" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_dark_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_dark_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_dark_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_dark_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_dark_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_dark_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_dark_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_dark_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_dark_error</item>
        <item name="colorErrorContainer">@color/md_theme_dark_errorContainer</item>
        <item name="colorOnError">@color/md_theme_dark_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_dark_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_dark_background</item>
        <item name="colorOnBackground">@color/md_theme_dark_onBackground</item>
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_dark_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_dark_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_dark_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_dark_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_dark_inversePrimary</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/md_theme_light_onBackground</item>
    </style>

    <style name="floatingActionButtonStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">52dp</item>
    </style>

    <style name="dividerStyle" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:layout_marginBottom">@dimen/margin_12</item>
        <item name="android:layout_marginTop">@dimen/margin_12</item>
        <item name="dividerColor">@color/teal_200</item>
    </style>

    <style name="appBarIconsStyle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:tint">@color/md_theme_light_onTertiary</item>
    </style>
    <style name="ImageViewFrameStyle">
        <item name="android:background">@drawable/circleshape2</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item> <!-- Optional padding -->
    </style>
    <style name="generalLinearLayoutStyle" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/back</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/margin_16</item>
    </style>

    <style name="generalTextTitleStyle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/kanita</item>
        <item name="android:textColor">@color/bottom</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="generalTextSubtitleStyle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/kanita</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="generalTextHintStyle" parent="generalTextSubtitleStyle">
        <item name="android:textColor">@color/md_theme_dark_outline</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>
    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>

    </style>

    <style name="roundedlogo">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>

    </style>

    <style name="half_round">
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">15%</item>
        <item name="cornerSizeTopRight">0%</item>
        <item name="cornerSizeBottomRight">0%</item>
    </style>


</resources>
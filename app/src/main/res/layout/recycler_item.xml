<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="offre"
            type="com.example.freebite2.model.OffreModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/offerImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:imageUrl="@{offre.pictureUrl}"
            app:shapeAppearanceOverlay="@style/half_round"
            />

        <TextView
            android:id="@+id/offerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{offre.nameoffre}"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/offerDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offer Details"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/offerDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:paddingTop="4dp" />

    </LinearLayout>
</layout>
